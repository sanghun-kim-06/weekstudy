<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="student">
	<select id="selectAllStudent"
		resultType="com.student.vo.StudentVO">
			SELECT student_no,
					student_name,
					age,
					grade,
					classnumber,
					height,
					address,
					phone,
					gender
			FROM student
	</select>
	<insert id="insertStudent" parameterType="com.student.vo.StudentVO">
		INSERT INTO student VALUES(SEQ_STUDENT.nextval
			, #{studentName}
			, #{age}
			, #{grade}
			, #{classnumber}
			, #{hieght}
			, #{address}
			, #{phone}
			, #{gender})
	</insert>

</mapper>